<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       app:cardElevation="20dp"
       android:backgroundTint="#EDFFFFFF"
       app:cardCornerRadius="36dp"
       android:layout_gravity="center"
       android:layout_marginTop="76dp"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_margin="30dp"
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Post Now"
               android:layout_gravity="center"
               android:textColor="@color/green"
               android:textSize="32dp"
               android:layout_marginBottom="30dp"
               android:textStyle="bold"
               />

           <EditText
               android:id="@+id/editTextTextPersonName9"
               android:layout_width="250dp"
               android:layout_height="45dp"
               android:background="@drawable/edittextborder"
               android:backgroundTint="@color/green"
               android:ems="10"
               android:layout_margin="10dp"
               android:hint="Post Title"
               android:inputType="textPersonName"
               android:paddingLeft="5dp"
               android:textColor="@color/green"
               android:textColorHint="@color/green"
               />
           <EditText
               android:id="@+id/editTextTextPhone"
               android:layout_width="250dp"
               android:layout_margin="10dp"
               android:layout_height="45dp"
               android:background="@drawable/edittextborder"
               android:backgroundTint="@color/green"
               android:ems="10"
               android:hint="Phone"
               android:inputType="number"
               android:paddingLeft="5dp"
               android:textColor="@color/green"
               android:textColorHint="@color/green"
               />

           <EditText
               android:id="@+id/editTextTextPersonName12"
               android:layout_width="250dp"
               android:layout_height="45dp"
               android:layout_margin="10dp"
               android:background="@drawable/edittextborder"
               android:backgroundTint="@color/green"
               android:ems="10"
               android:hint="Area and City"
               android:inputType="textPersonName"
               android:paddingLeft="5dp"
               android:textColor="@color/green"
               android:textColorHint="@color/green"
               />
           <EditText
               android:id="@+id/timePicker"
               android:layout_width="250dp"
               android:layout_height="45dp"
               android:background="@drawable/edittextborder"
               android:backgroundTint="@color/green"
               android:ems="10"
               android:layout_margin="10dp"
               android:hint="Time (Format:10:00 AM/PM)"
               android:paddingLeft="5dp"
               android:textColor="@color/green"
               android:textColorHint="@color/green"
               />
           <EditText
               android:id="@+id/editTextTextPersonName11"
               android:layout_width="250dp"
               android:layout_height="45dp"
               android:layout_margin="10dp"
               android:background="@drawable/edittextborder"
               android:backgroundTint="@color/green"
               android:ems="10"
               android:hint="Salary per month"
               android:inputType="phone"
               android:paddingLeft="5dp"
               android:textColor="@color/green"
               android:textColorHint="@color/green"
               />


           <EditText
               android:id="@+id/editTextTextPersonName10"
               android:layout_width="250dp"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:background="@drawable/edittextborder"
               android:backgroundTint="@color/green"
               android:ems="10"
               android:hint="Details for this post ...\n "
               android:inputType="textPersonName"
               android:paddingLeft="5dp"
               android:textColor="@color/green"
               android:textColorHint="@color/green" />

           <com.google.android.material.button.MaterialButton
               android:id="@+id/button4"
               android:layout_gravity="center"
               android:layout_width="144dp"
               android:layout_height="55dp"
               android:backgroundTint="@color/yellow"
               android:text="Post Now"
               android:layout_margin="16dp"
               android:textColor="@color/white"
               app:cornerRadius="20dp"
               />

           <ProgressBar
               android:id="@+id/progressBar11"
               style="?android:attr/progressBarStyle"
               android:layout_width="22dp"
               android:layout_height="1dp"
               android:layout_gravity="center"
               android:indeterminate="true"
               android:indeterminateTint="@color/yellow"
               android:visibility="invisible" />

           <TextView
               android:id="@+id/textView"
               android:layout_width="10dp"
               android:layout_height="10dp"
               android:visibility="visible"
               android:text=""
               android:textColor="@color/green"
               />
       </LinearLayout>
   </androidx.cardview.widget.CardView>

</LinearLayout>
